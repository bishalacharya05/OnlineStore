@model Category
<div class="card shadow border mt-4">
	<div class="card-header bg-primary m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Edit Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="Id" hidden />
			<div class="p-3 mt-4">
				<div class="mb-3 row p-1">
					<label>Category Name:</label>
					<input asp-for="CategoryName" type="text" class="form-control" /><br />
					<span asp-validation-for="CategoryName" class="text-danger"></span>

				</div>
				<div class="mb-3 row p-1">
					<label>Display Order:</label>
					<input asp-for="DisplayOrder" type="Number" class="form-control" /><br />
					<span asp-validation-for="DisplayOrder" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6">
						<button type="submit" class="btn btn-primary form-control">Update</button>
					</div>
					<div class="col-6">
						<a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
							Back to list
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
@* this is done to add the client side validation to the create category input field *@
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}


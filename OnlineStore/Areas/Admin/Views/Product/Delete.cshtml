@model Product
<div class="card shadow border mt-4">
	<div class="card-header bg-primary m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">

		<form method="post">
			<input asp-for="ProductId" hidden />
			<div class="p-3 mt-4">

				<div class="mb-3 row p-1">
					<label asp-for="Title">Product Name:</label>
					<input asp-for="Title" type="text" class="form-control" disabled /><br />

				</div>
				<div class="mb-3 row p-1">
					<label asp-for="Brand">Brand:</label>
					<input asp-for="Brand" type="Number" class="form-control" disabled /><br />

				</div>
				<div class="mb-3 row p-1">
					<label asp-for="Description">Product Description:</label>
					<textarea asp-for="Description" type="text" class="form-control" disabled></textarea><br />

				</div>
				<div class="mb-3 row p-1">
					<label asp-for="Price">Price:</label>
					<input asp-for="Price" type="number" class="form-control" step="0.01" min="0" disabled /><br />

				</div>
				<div class="row">
					<div class="col-6">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6">
						<a asp-controller="Product" asp-action="Index" class="btn btn-primary form-control">
							Back to list
						</a>
					</div>
				</div>
			</div>

		</form>
	</div>
</div>


